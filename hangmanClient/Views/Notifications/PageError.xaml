<Page x:Class="Views.Pages.PageError"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Views.Pages"
      xmlns:p="clr-namespace:Views.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="251" d:DesignWidth="518"
      Title="PageError">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Images\Background-Error.png"/>
        </Grid.Background>
        <Label x:Name="lbTitleError" FontFamily="{StaticResource PressStart2P}"  FontSize="20" HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top"/>
        <Label FontFamily="{StaticResource FuenteVT323}"  
       FontSize="17" 
       HorizontalAlignment="Center" 
       VerticalAlignment="Top" 
       Margin="0,122,0,0" 
       Width="370">
            <TextBlock x:Name="tbMessageError" TextWrapping="Wrap" TextAlignment="Center">
            </TextBlock>
        </Label>
        <Button Cursor="Hand" Style="{StaticResource orange-button}" FontFamily="{StaticResource FuenteVT323}" FontSize="14" Content="{x:Static p:Resources.btnAccept}" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" 
                Click="BtnAcceptClick" Height="26" Width="74"/>


    </Grid>
</Page>
