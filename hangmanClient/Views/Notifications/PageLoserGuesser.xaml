<Page x:Class="Views.Notifications.PageLoserGuesser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="251" d:DesignWidth="518"
      Title="PageLoserGuesser">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Images\Background-Error.png"/>
        </Grid.Background>
        <Label FontFamily="{StaticResource PressStart2P}" FontSize="18" Content="¡Oh no! ¡Has sido ahorcado!&#xA;" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbWord" FontFamily="{StaticResource FuenteVT323}" FontSize="18" Content="La palabra era:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Source="\Images\sign.png" HorizontalAlignment="Left" Height="68" Margin="224,128,0,0" VerticalAlignment="Top" Width="82"/>
        <Label FontFamily="{StaticResource FuenteVT323}" FontSize="15" Content="puntos" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbScore" FontFamily="{StaticResource FuenteVT323}" FontSize="23" Foreground="White" HorizontalAlignment="Left" Margin="233,155,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAccept" Cursor="Hand" Style="{StaticResource orange-button}" FontFamily="{StaticResource FuenteVT323}" FontSize="14" Content="Aceptar" HorizontalAlignment="Left" Margin="210,212,0,0" VerticalAlignment="Top" Height="29" Width="90" Click="BtnAcceptClick"/>
    </Grid>
</Page>
